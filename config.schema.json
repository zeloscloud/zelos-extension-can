{
  "type": "object",
  "title": "CAN Bus Configuration",
  "description": "Configure CAN interface and DBC file",
  "properties": {
    "interface": {
      "type": "string",
      "title": "CAN Interface",
      "description": "CAN interface type",
      "enum": [
        "socketcan",
        "virtual",
        "pcan",
        "kvaser",
        "vector"
      ],
      "default": "virtual"
    },
    "channel": {
      "type": "string",
      "title": "Channel",
      "description": "CAN channel identifier",
      "default": "vcan0",
      "ui:placeholder": "e.g., vcan0, can0, PCAN_USBBUS1"
    },
    "bitrate": {
      "type": "integer",
      "title": "Bitrate (bps)",
      "description": "CAN bus bitrate (classical CAN)",
      "enum": [
        125000,
        250000,
        500000,
        1000000
      ],
      "default": 500000
    },
    "fd_mode": {
      "type": "boolean",
      "title": "CAN-FD Mode",
      "description": "Enable CAN-FD for higher data rates and larger payloads",
      "default": false
    },
    "data_bitrate": {
      "type": "integer",
      "title": "Data Bitrate (bps)",
      "description": "CAN-FD data phase bitrate (only used if FD mode enabled)",
      "enum": [
        500000,
        1000000,
        2000000,
        4000000,
        8000000
      ],
      "default": 2000000
    },
    "dbc_file": {
      "type": "string",
      "title": "DBC File Path",
      "description": "Path to CAN database file",
      "ui:widget": "file-picker",
      "ui:placeholder": "/path/to/database.dbc"
    }
  },
  "required": [
    "interface",
    "channel",
    "dbc_file"
  ]
}
